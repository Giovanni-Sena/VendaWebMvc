@{
    ViewData["Title"] = "Resgistro de vendas";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data mínima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaPorGrupo">
            <fieldset>
                <legend>Pesquisa por Grupo</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data mínima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMin" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data máxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMax" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>